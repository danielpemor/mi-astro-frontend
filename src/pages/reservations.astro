<script>
  // Sistema de disponibilidad en tiempo real
  let availabilityData = null;
  let selectedHour = null;
  let currentFecha = null;
  
  // Formulario de reservación
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('reservationForm');
    const submitBtn = document.getElementById('submitBtn');
    const fechaInput = document.getElementById('fecha');
    const horaSelect = document.getElementById('hora');
    const personasSelect = document.getElementById('personas');
    const availabilityIndicator = document.getElementById('availabilityIndicator');
    const availabilitySummary = document.getElementById('availabilitySummary');
    const hourlyAvailability = document.getElementById('hourlyAvailability');
    
    // Función para verificar disponibilidad
    async function checkAvailability(fecha, showLoading = true) {
      if (!fecha) return;
      
      currentFecha = fecha;
      
      // Mostrar indicador de carga solo si se solicita
      if (showLoading) {
        availabilityIndicator.classList.remove('hidden');
        availabilitySummary.classList.add('hidden');
      }
      
      try {
        const response = await fetch(`/api/availability?fecha=${fecha}&personas=1`);
        if (!response.ok) throw new Error('Error al verificar disponibilidad');
        
        availabilityData = await response.json();
        console.log('Disponibilidad actualizada:', availabilityData);
        
        // Actualizar selector de hora
        updateHourSelector();
        
        // Mostrar resumen de disponibilidad
        showAvailabilitySummary();
        
      } catch (error) {
        console.error('Error:', error);
        if (showLoading) {
          alert('Error al verificar la disponibilidad. Por favor, intenta de nuevo.');
        }
      } finally {
        if (showLoading) {
          availabilityIndicator.classList.add('hidden');
        }
      }
    }
    
    // Actualizar selector de hora con disponibilidad
    function updateHourSelector() {
      // Guardar el valor actual si existe
      const currentValue = horaSelect.value;
      
      // Limpiar y regenerar opciones
      horaSelect.innerHTML = '<option value="">Selecciona una hora</option>';
      
      // Agregar horarios de mañana
      const horariosMañana = ['08:00', '08:30', '09:00', '09:30', '10:00', '10:30', '11:00', '11:30', '12:00', '12:30', '13:00', '13:30', '14:00', '14:30', '15:00'];
      const horariosNoche = ['19:00', '19:30', '20:00', '20:30', '21:00', '21:30'];
      
      // Agrupar por mañana y noche
      const optgroupMañana = document.createElement('optgroup');
      optgroupMañana.label = 'Mañana / Tarde';
      
      const optgroupNoche = document.createElement('optgroup');
      optgroupNoche.label = 'Noche';
      
      let hasAvailableHours = false;
      
      horariosMañana.forEach(hora => {
        const info = availabilityData.horarios[hora];
        if (info) {
          const option = createHourOption(hora, info);
          if (!option.disabled) hasAvailableHours = true;
          optgroupMañana.appendChild(option);
        }
      });
      
      horariosNoche.forEach(hora => {
        const info = availabilityData.horarios[hora];
        if (info) {
          const option = createHourOption(hora, info);
          if (!option.disabled) hasAvailableHours = true;
          optgroupNoche.appendChild(option);
        }
      });
      
      horaSelect.appendChild(optgroupMañana);
      horaSelect.appendChild(optgroupNoche);
      
      // Restaurar el valor si todavía es válido
      if (currentValue && availabilityData.horarios[currentValue]?.espaciosDisponibles > 0) {
        horaSelect.value = currentValue;
        updatePersonasSelector(currentValue);
      } else {
        // Reset personas si la hora ya no es válida
        personasSelect.innerHTML = '<option value="">Primero selecciona una hora</option>';
        personasSelect.disabled = true;
      }
      
      // Actualizar info
      document.getElementById('horaInfo').textContent = hasAvailableHours ? '(ver disponibilidad)' : '';
    }
    
    function createHourOption(hora, info) {
      const option = document.createElement('option');
      option.value = hora;
      
      if (info.estado === 'pasado') {
        option.disabled = true;
        option.textContent = `${hora} - Ya pasó`;
        option.style.color = '#9ca3af';
      } else if (info.espaciosDisponibles === 0) {
        option.disabled = true;
        option.textContent = `${hora} - COMPLETO`;
        option.style.color = '#ef4444';
      } else if (info.espaciosDisponibles <= 5) {
        option.textContent = `${hora} - ¡Solo ${info.espaciosDisponibles} lugares!`;
        option.style.color = '#f97316';
      } else {
        option.textContent = `${hora} - ${info.espaciosDisponibles} lugares disponibles`;
        option.style.color = '#16a34a';
      }
      
      return option;
    }
    
    // Mostrar resumen de disponibilidad
        // Mostrar resumen de disponibilidad
    function showAvailabilitySummary() {
      hourlyAvailability.innerHTML = '';
      availabilitySummary.classList.remove('hidden');
      
      const horasOrdenadas = Object.keys(availabilityData.horarios).sort();
      
      horasOrdenadas.forEach(hora => {
        const info = availabilityData.horarios[hora];
        const div = document.createElement('div');
        div.className = 'p-2 rounded text-center ';
        
        if (info.estado === 'pasado') {
          div.className += 'bg-gray-100 text-gray-500';
          div.innerHTML = `<div class="font-medium">${hora}</div><div class="text-xs">Pasado</div>`;
        } else if (info.espaciosDisponibles === 0) {
          div.className += 'bg-red-100 text-red-700';
          div.innerHTML = `<div class="font-medium">${hora}</div><div class="text-xs">Completo</div>`;
        } else if (info.espaciosDisponibles <= 5) {
          div.className += 'bg-orange-100 text-orange-700';
          div.innerHTML = `<div class="font-medium">${hora}</div><div class="text-xs">${info.espaciosDisponibles} lugares</div>`;
        } else {
          div.className += 'bg-green-100 text-green-700';
          div.innerHTML = `<div class="font-medium">${hora}</div><div class="text-xs">${info.espaciosDisponibles} lugares</div>`;
        }
        
        hourlyAvailability.appendChild(div);
      });
      
      // Actualizar clase del contenedor según disponibilidad general
      if (availabilityData.resumen.horariosDisponibles === 0) {
        availabilitySummary.className = 'p-4 rounded-lg bg-red-50 border border-red-200';
      } else if (availabilityData.resumen.horariosDisponibles <= 3) {
        availabilitySummary.className = 'p-4 rounded-lg bg-orange-50 border border-orange-200';
      } else {
        availabilitySummary.className = 'p-4 rounded-lg bg-green-50 border border-green-200';
      }
    }
    
    // Actualizar selector de personas según hora seleccionada
    function updatePersonasSelector(hora) {
      if (!hora || !availabilityData) {
        personasSelect.innerHTML = '<option value="">Primero selecciona una hora</option>';
        personasSelect.disabled = true;
        submitBtn.disabled = true;
        return;
      }
      
      const horaInfo = availabilityData.horarios[hora];
      if (!horaInfo || horaInfo.espaciosDisponibles === 0) {
        personasSelect.innerHTML = '<option value="">No hay disponibilidad para esta hora</option>';
        personasSelect.disabled = true;
        submitBtn.disabled = true;
        return;
      }
      
      // Guardar valor actual
      const currentValue = personasSelect.value;
      
      personasSelect.innerHTML = '<option value="">Selecciona número de personas</option>';
      personasSelect.disabled = false;
      
      // Generar opciones según disponibilidad
      const maxPersonas = Math.min(8, horaInfo.espaciosDisponibles);
      for (let i = 1; i <= maxPersonas; i++) {
        const option = document.createElement('option');
        option.value = i;
        option.textContent = i === 1 ? '1 persona' : `${i} personas`;
        personasSelect.appendChild(option);
      }
      
      // Restaurar valor si es válido
      if (currentValue && parseInt(currentValue) <= maxPersonas) {
        personasSelect.value = currentValue;
        submitBtn.disabled = false;
      }
      
      // Actualizar info
      document.getElementById('personasInfo').textContent = `(máx. ${maxPersonas} disponibles)`;
      
      // Guardar hora seleccionada
      selectedHour = hora;
    }
    
    // Event listener para cambio de fecha
    fechaInput.addEventListener('change', (e) => {
      const fecha = e.target.value;
      if (fecha) {
        checkAvailability(fecha);
      } else {
        // Reset si no hay fecha
        horaSelect.innerHTML = '<option value="">Selecciona una hora</option>';
        horaSelect.disabled = false;
        personasSelect.innerHTML = '<option value="">Selecciona</option>';
        personasSelect.disabled = false;
        submitBtn.disabled = true;
        availabilitySummary.classList.add('hidden');
        document.getElementById('horaInfo').textContent = '';
        document.getElementById('personasInfo').textContent = '';
      }
    });
    
    // Event listener para cambio de hora
    horaSelect.addEventListener('change', (e) => {
      if (availabilityData && e.target.value) {
        updatePersonasSelector(e.target.value);
      }
    });
    
    // Event listener para cambio de personas
    personasSelect.addEventListener('change', (e) => {
      if (e.target.value) {
        submitBtn.disabled = false;
      } else {
        submitBtn.disabled = true;
      }
    });
    
    // Actualización automática de disponibilidad cada 30 segundos
    let updateInterval;
    function startAutoUpdate() {
      if (updateInterval) clearInterval(updateInterval);
      
      updateInterval = setInterval(() => {
        if (currentFecha && !availabilityIndicator.classList.contains('hidden')) {
          return; // No actualizar si ya está cargando
        }
        
        if (currentFecha) {
          console.log('Actualizando disponibilidad automáticamente...');
          checkAvailability(currentFecha, false); // false = no mostrar indicador de carga
        }
      }, 30000); // 30 segundos
    }
    
    // Iniciar actualización automática cuando se selecciona una fecha
    fechaInput.addEventListener('change', () => {
      if (fechaInput.value) {
        startAutoUpdate();
      } else {
        if (updateInterval) clearInterval(updateInterval);
      }
    });
    
    // Limpiar intervalo al salir de la página
    window.addEventListener('beforeunload', () => {
      if (updateInterval) clearInterval(updateInterval);
    });
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Deshabilitar el botón durante el envío
        submitBtn.disabled = true;
        submitBtn.textContent = 'Enviando...';
        
        // Obtener datos del formulario
        const formData = new FormData(form);
        const reservationData = {
          nombre: formData.get('nombre'),
          telefono: formData.get('telefono'),
          email: formData.get('email'),
          fecha: formData.get('fecha'),
          hora: formData.get('hora'),
          personas: formData.get('personas'),
          comentarios: formData.get('comentarios') || null
        };
        
        console.log('Enviando datos de reserva:', reservationData);
        
        try {
          // Usar la API route de Astro en lugar de llamar directamente a Directus
          const response = await fetch('/api/reservations', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(reservationData)
          });
          
          console.log('Respuesta del servidor:', response);
          
          if (response.ok) {
            const result = await response.json();
            console.log('Reserva creada:', result);
            alert('¡Reserva recibida con éxito! Te contactaremos para confirmar tu reserva.');
            
            // Limpiar intervalo de actualización
            if (updateInterval) clearInterval(updateInterval);
            
            // Reset formulario
            form.reset();
            horaSelect.innerHTML = '<option value="">Selecciona una hora</option>';
            personasSelect.innerHTML = '<option value="">Selecciona</option>';
            submitBtn.disabled = true;
            availabilitySummary.classList.add('hidden');
            availabilityData = null;
            selectedHour = null;
            currentFecha = null;
            document.getElementById('horaInfo').textContent = '';
            document.getElementById('personasInfo').textContent = '';
            
          } else {
            const errorData = await response.json();
            console.error('Error al enviar reserva:', errorData);
            
            if (response.status === 409) {
              // Capacidad insuficiente - actualizar disponibilidad
              alert(`Lo sentimos, la capacidad ha cambiado. Solo quedan ${errorData.disponibles} lugares disponibles para este horario. Actualizando disponibilidad...`);
              // Recargar disponibilidad inmediatamente
              await checkAvailability(formData.get('fecha'));
              // Actualizar el selector de personas con la nueva disponibilidad
              if (selectedHour) {
                updatePersonasSelector(selectedHour);
              }
            } else {
              alert('El horario seleccionado ya alcanzó el límite de su capacidad.');
              // Actualizar disponibilidad para reflejar cambios
              await checkAvailability(formData.get('fecha'));
            }
          }
        } catch (error) {
          console.error('Error de red:', error);
          alert('Error de conexión. Por favor, verifica tu conexión a internet e inténtalo de nuevo.');
        } finally {
          // Rehabilitar el botón
          submitBtn.disabled = false;
          submitBtn.textContent = 'Confirmar reserva';
        }
      });
    }
  });
</script>